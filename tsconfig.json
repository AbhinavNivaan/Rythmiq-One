{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "api-gateway/**/*",
    "engine/**/*",
    "bootstrap/**/*",
    "db/**/*",
    "schemas/**/*",
    "security/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app",
    "infra",
    // ðŸ”´ Non-production files
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*TESTS.ts",
    "**/*EXAMPLE*.ts",
    "**/*REFERENCE*.ts",
    "**/errors/**",
    "**/examples/**",
    "**/docs/**"
  ]
  "extends": "expo/tsconfig.base"
}